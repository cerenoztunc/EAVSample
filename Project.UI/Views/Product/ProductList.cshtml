@model ProductVM
@{
    ViewBag.Title = "ProductList";
}

<div class="jumbotron">
    Yeni bir ürün eklemek icin  @Html.ActionLink("tıklayınız", "AddProduct")
</div>

<div class="panel panel-primary">
    <div class="panel panel-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Ürün İsmi</th>
                    <th>Ürün Fiyatı</th>
                    <th>Stok</th>
                    <th colspan="2" style="padding-left:100px">Islemler</th>
                </tr>
            </thead>

            <tbody>
                @foreach (Product item in Model.Products)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.UnitPrice</td>
                        <td>@item.Amount</td>
                        <td>
                            @Html.ActionLink("Güncelle", "UpdateProduct", new { id = item.ID }, new { @class = "btn btn-warning" })

                        </td>

                        <td>    @Html.ActionLink("Sil", "DeleteProduct", new { id = item.ID }, new { @class = "btn btn-danger" })</td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

