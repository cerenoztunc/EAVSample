@model ProductVM
@{
    ViewBag.Title = "UpdateProduct";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.ProductInstance.ID)
<div>
    @Html.TextBoxFor(x => x.ProductInstance.ProductName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.ProductInstance.ProductName)
</div>
<div>
    @Html.TextBoxFor(x => x.ProductInstance.UnitPrice, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.ProductInstance.UnitPrice)
</div>
    <div>
        @Html.TextBoxFor(x => x.ProductInstance.Amount, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-primary">
            Güncelle
        </button>
    </div>
}

