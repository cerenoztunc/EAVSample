@model AttributeVM
@{
    ViewBag.Title = "AttributeList";
}

<div class="jumbotron">
    Yeni bir ürün eklemek icin  @Html.ActionLink("tıklayınız", "AddAttribute")
</div>

<div class="panel panel-primary">
    <div class="panel panel-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Özellik İsmi</th>

                    <th colspan="2" style="padding-left:100px">Islemler</th>
                </tr>
            </thead>

            <tbody>
                @foreach (AttributeEnt item in Model.Attributes)
                {
                    <tr>
                        <td>@item.AttributeName</td>

                        <td>
                            @Html.ActionLink("Güncelle", "UpdateAttribute", new { id = item.ID }, new { @class = "btn btn-warning" })

                        </td>

                        <td>    @Html.ActionLink("Sil", "DeleteAttribute", new { id = item.ID }, new { @class = "btn btn-danger" })</td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

