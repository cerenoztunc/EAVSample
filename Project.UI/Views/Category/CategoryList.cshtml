@model CategoryVM
@{
    ViewBag.Title = "CategoryList";
}

<div class="jumbotron">
    Yeni bir kategori eklemek icin  @Html.ActionLink("tıklayınız", "AddCategory")
</div>

<div class="panel panel-primary">
    <div class="panel panel-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Kategori İsmi</th>
                    <th>Açıklama</th>

                    <th colspan="2" style="padding-left:150px">Islemler</th>
                </tr>
            </thead>

            <tbody>
                @foreach (Category item in Model.Categories)
                {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>

                    <td>
                        @Html.ActionLink("Güncelle", "UpdateCategory", new { id = item.ID }, new { @class = "btn btn-warning" })

                    </td>
                    

                    <td>    
                        @Html.ActionLink("Sil", "DeleteCategory", new { id = item.ID }, new { @class = "btn btn-danger" })
                    </td>


                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

